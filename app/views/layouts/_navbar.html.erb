<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-light bg-light p-1">
    <ul class="navbar-nav">
      <a class="navbar-brand" href="/"> <img src="/assets/topicon.png" class="img-fluid ml-1" width="70em" height="70em"></a>
    </ul>
    <% if logged_in? %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <li class="nav-item"><%= link_to 'マイページ',user_path(current_user), class: 'nav-link' %></li>
        <li class="nav-item"><%= link_to '会員情報変更',edit_user_path(current_user), class: 'nav-link' %></li>
        <li class="nav-item"><%= link_to 'ログアウト',logout_path, method: :delete, class: 'nav-link' %></li>
      </ul>
    </div>

    <% else %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item"><%= link_to 'ログイン',login_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to '会員登録',signup_path, class: 'nav-link' %></li>
        </ul>
      </div>
    <% end %>
  </nav>
</header>
