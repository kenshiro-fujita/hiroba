<h3>　本の詳細　</h3>
<div class='row'>
  <%= render 'books/book_aside' %>
    <div class="col-sm-8"> 
    <h2>書評全文</h2>
      <div class="card mt-3">
        <div class="card-header">
          <div class="d-inline-block"><%= link_to "ユーザー名：#{@user.name}", user_path(@user) %></div>
          <div class="d-inline-block float-right"><%= render 'relationships/follow_button', now_user: @user %></div>
          <br>
          <%= "レビュータイトル：#{@review.rev_title}" %>
        </div>
        <div class="card-body">
          <%= @review.content %>
        </div>
      </div>
      <% if current_user == @user %>
        <%= link_to "編集または削除する", edit_book_review_path(@book, @review), class: "btn btn-primary mt-3" %>
      <% end %>
      <%= render 'favorites/fav_button', one_review: @review %>
    </div>
</div>
