<aside class='col-sm-4'>
  <table class="table">
    <tr><td class="align-middle">題名</td><td class="align-middle"><%= @book.title %></td></tr>
    <tr><td class="align-middle">著者</td><td class="align-middle"><%= @book.author %></td></tr>
    <tr><td class="align-middle">ISBN</td><td class="align-middle"><%= @book.isbn %></td></tr>
    <tr><td class="align-middle text-center">出版社</td><td class="align-middle"><%= @book.publisher %></td></tr>
    <tr><td class="align-middle">初刷発売</td><td class="align-middle"><%= @book.release_date %></td></tr>
  </table>

  <%= render 'recommendations/recommend_button', one_book: @book %>
  <a href="/books/"><font size="4">本の一覧へ</font></a><br><br>
  <% unless current_page?(book_path(@book)) %>
    <font size="4"><%= link_to 'この本の書評一覧へ', book_path(@book.id) %></font>
  <% end %>
</aside>
